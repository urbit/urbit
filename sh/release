#!/usr/bin/env bash

set -ex

if [ -n "${TRAVIS_TAG-}" ]
then
  ver="$TRAVIS_TAG"
elif [ -n "${TRAVIS_COMMIT-}" ]
then
  ver="$TRAVIS_COMMIT"
else
  ver="$(git rev-parse HEAD)"
fi

traced () {
  echo '$' "$@" >&2; "$@"
}

mkdir -p release

for plat in linux-arm64
do
  sh/cross urbit "$plat"

  tmp=$(mktemp -d)
  mkdir -p $tmp/$ver-$plat
  traced cp -r cross/$plat/* $tmp/$ver-$plat

  echo "packaging release/$ver-$plat.tgz"
  (cd $tmp; tar cz $ver-$plat) > release/$ver-$plat.tgz

  rm -rf $tmp
done
