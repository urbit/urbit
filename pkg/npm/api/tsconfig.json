{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "module": "CommonJS",
    "noImplicitAny": true,
    "target": "ES5",
    "downlevelIteration": true,
    "pretty": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "strict": false,
    "noErrorTruncation": true
  },
  "exclude": ["node_modules", "./dist/**/*", "@types"],
  "include": ["./*.ts"]
}
