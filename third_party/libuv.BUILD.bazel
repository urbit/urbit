load("@rules_cc//cc:defs.bzl", "cc_library")
load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

filegroup(
    name = "srcs",
    srcs = glob(["**"]),
)

# Using foreign_cc results in considerably slower builds.
#
# XXX: The libuv cmake toolchain outputs libuv_a.a by default.
# See: https://github.com/libuv/libuv/issues/3009
configure_make(
    name = "libuv",
    # See: @rules_foreign_cc#315
    env = select({
        "@platforms//os:macos": {"AR": ""},
        "//conditions:default": {},
    }),
    autogen = True,
    autoconf = True,
    configure_in_place = True,
    lib_source = ":srcs",
    linkopts = select({
        "@platforms//os:linux": [
            "-pthread",
            "-ldl",
        ],
        "//conditions:default": [
            "-pthread",
        ],
    }),
    out_static_libs = select({
        "@platforms//os:windows": ["libuv.lib"],
        "//conditions:default": ["libuv.a"],
    }),
    includes = ["include"],
    visibility = ["//visibility:public"],
    lib_name = "libuv",
)

